generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  firstName String
  lastName String
  email String @unique
  password String
  isAdmin Boolean @default (false)
  cart Cart? 
}

model Products {
  id String @id @default(uuid())
  productName String
  image String
  price String
  publish Boolean @default (true)
  cartItems CartItems[]
}

model Cart {
  id String @id @default(uuid())
  cartItems CartItems[] 
  users Users @relation(fields: [usersId], references: [id], onDelete: SetNull)
  usersId String @unique
}

model CartItems {
  id String @id @default(uuid())
  products  Products @relation(fields: [productsId], references: [id], onDelete: Cascade)
  productsId String 
  quantity Int @default(1)
  cartId String
  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)
   @@unique([cartId, productsId])
}